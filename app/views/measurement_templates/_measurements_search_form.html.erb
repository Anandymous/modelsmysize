<%= search_form_for @q, :class => collapse_search_form, :id => "measurements_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :shirt_size_cont, "Shirt size contains" %>
    <%= f.text_field :shirt_size_cont, :class => "form-control", :placeholder => "Shirt size contains" %>
  </div>

  <div class="form-group">
    <%= f.label :image_link_cont, "Image link contains" %>
    <%= f.text_field :image_link_cont, :class => "form-control", :placeholder => "Image link contains" %>
  </div>

  <div class="form-group">
    <%= f.label :instagram_link_cont, "Instagram link contains" %>
    <%= f.text_field :instagram_link_cont, :class => "form-control", :placeholder => "Instagram link contains" %>
  </div>

  <div class="form-group">
    <%= f.label :shoe_size, "Shoe size" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :shoe_size_gteq, :class => "form-control", :placeholder => "Shoe size greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :shoe_size_lteq, :class => "form-control", :placeholder => "Shoe size less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :pant_size, "Pant size" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :pant_size_gteq, :class => "form-control", :placeholder => "Pant size greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :pant_size_lteq, :class => "form-control", :placeholder => "Pant size less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>




  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/measurements" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#measurements_filters">
  Show filters
</a>
