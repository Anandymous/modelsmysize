<% if @measurement.errors.any? %>
  <% @measurement.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit measurement #<%= @measurement.id %>
</h1>

<hr>

<form action="/update_measurement/<%= @measurement.id %>" method="post">

  <div class="form-group">
    <label for="shirt_size">
      Shirt size
    </label>

    <input type="text" id="shirt_size" name="shirt_size" class="form-control" value="<%= @measurement.shirt_size %>">
  </div>

  <div class="form-group">
    <label for="pant_size">
      Pant size
    </label>

    <input type="text" id="pant_size" name="pant_size" class="form-control" value="<%= @measurement.pant_size %>">
  </div>

  <div class="form-group">
    <label for="shoe_size">
      Shoe size
    </label>

    <input type="text" id="shoe_size" name="shoe_size" class="form-control" value="<%= @measurement.shoe_size %>">
  </div>

  <div class="form-group">
    <label for="instagram_link">
      Instagram link
    </label>

    <input type="text" id="instagram_link" name="instagram_link" class="form-control" value="<%= @measurement.instagram_link %>">
  </div>

  <div class="form-group">
    <label for="image_link">
      Image link
    </label>

    <input type="text" id="image_link" name="image_link" class="form-control" value="<%= @measurement.image_link %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update measurement
  </button>
</form>

<hr>

<a href="/measurements">
  Go back
</a>
